extends layout

block content
    .container
        form(method='post', action='contact')
            .form-group
                label Name
                input.form-control(type='text', name='name', placeholder='Your Name')
            .form-group
                label Email
                input.form-control(type='email', name='email', placeholder='yourname@email.com')
            .form-group
                label Message
                textarea.form-control(name='message', placeholder='Your message here')
            button.btn.btn-default(type='submit') Submit
